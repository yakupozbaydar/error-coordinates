{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        {
          "base": "$esbuild-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\[watch\\] build started$",
            "endsPattern": "^\\[watch\\] build finished$"
          }
        }
      ],
      "isBackground": true,
      "label": "npm: watch"
    }
  ]
}
